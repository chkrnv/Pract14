<Window x:Class="Pract14.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pract14"
        mc:Ignorable="d"
        Title="Настройки" WindowStartupLocation="CenterOwner" Height="270" Width="370" ResizeMode="NoResize" Background="#FFCDC3FC">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="70"/> 
        </Grid.RowDefinitions>

        <GroupBox Header="Размер матрицы" Margin="5,5,5,5" Grid.Row="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Content="Введите количество строк:" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBox x:Name="inputRowCount" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right" Height="30" Width="60" Margin="0,0,10,0"/>
                <Label Content="Введите количество столбцов:" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBox x:Name="inputColumnCount" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Height="30" Width="60" Margin="0,0,10,0"/>
            </Grid>
        </GroupBox>

        <Button Content="Сохранить настройки" Click="Сохранить_Настройки_Click" Grid.Row="2" Margin="5,5,5,5" Background="#FF937CD6"/>
    </Grid>
</Window>
