<Window x:Class="Pract14.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pract14"
        mc:Ignorable="d"
        Title="Авторизация" WindowStartupLocation="CenterOwner" Height="130" Width="290" ResizeMode="NoResize" Activated="Window_Activate" Background="#FFCDC3FC" >
    <Grid>
        <StackPanel>
            <PasswordBox x:Name="inputPassword" PasswordChar="*" Height="30" Background="#FFCDC3FC"/>
            <Button Click = "Войти_Click" Content="Войти" IsDefault="True" Height="32" Background="#FF937CD6"/>
            <Button Click = "Отмена_Click" Content="Отмена" IsCancel="True" Height="32" Background="#FF937CD6"/>
        </StackPanel>
    </Grid>
</Window>
